<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="example_ros2_control" params="
    name
    prefix
    log_level:=debug">

    <ros2_control name="${name}" type="system">
      <hardware>
        <plugin>robotnik_base_hw/RobotnikBaseHw</plugin>

        <param name="type">robotnik_bus_plugins::BusCan</param>
        <param name="log_level">${log_level}</param>
        <param name="device">/dev/pcan_base</param>
        <param name="rate">50.0</param>
        <param name="auto_recovery">true</param>
        <param name="recovery_period">10</param>
        <!-- More hardware parameters here -->
      </hardware>
      
      <joint name="${prefix}left_wheel_joint">
        <param name="type">robotnik_motor_plugins::MotorA</param>
        
        <command_interface name="velocity"> 
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>

        <!-- PARAMETERS -->
        <param name="can_id">1</param>
        <param name="gearbox_ratio">9.56</param>
        <param name="home_offset">0.0</param>
        <param name="spin">1</param>
        <param name="encoder_resolution">4000</param>
        <param name="digital_inputs">3</param>
        <param name="digital_outputs">3</param>
        <param name="analog_inputs">3</param>
        <param name="analog_outputs">3</param>

        <param name="diameter_wheel">0.1524</param>
        <param name="motors_encoder">true</param>
        <param name="max_rated_peak_current_drive">40.0</param>
        <!-- More motor parameters here -->
        <param name="log_level">${log_level}</param>
      </joint>
      
      <joint name="${prefix}right_wheel_joint">
        <param name="type">robotnik_motor_plugins::MotorA</param>

        <command_interface name="velocity"> 
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>

        <!-- PARAMETERS -->
        <param name="can_id">2</param>
        <param name="gearbox_ratio">9.56</param>
        <param name="home_offset">0.0</param>
        <param name="spin">1</param>
        <param name="encoder_resolution">4000</param>
        <param name="digital_inputs">3</param>
        <param name="digital_outputs">3</param>
        <param name="analog_inputs">3</param>
        <param name="analog_outputs">3</param>

        <param name="diameter_wheel">0.1524</param>
        <param name="motors_encoder">true</param>
        <param name="max_rated_peak_current_drive">40.0</param>
        <!-- More motor parameters here -->
        <param name="log_level">${log_level}</param>
      </joint>
    </ros2_control>

  </xacro:macro>

</robot>
